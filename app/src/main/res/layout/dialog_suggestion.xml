<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_dialog"
    android:gravity="center">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/dialog_closeIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_close"
        android:tint="@color/colorPrimaryDark"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dialog_suggestionTitleTV"
        android:layout_below="@id/dialog_closeIB"
        android:layout_margin="2pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friendly Suggestion"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        style="@style/LargeTVPrimary"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dialog_questionTV"
        android:layout_below="@id/dialog_suggestionTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginBottom="5pt"
        android:gravity="center"
        style="@style/MediumTVBlack"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dialog_goBN"
        android:layout_below="@id/dialog_questionTV"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        style="@style/LoginSignupButtonStyle"/>

</RelativeLayout>