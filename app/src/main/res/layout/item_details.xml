<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3pt">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_subServiceNameTV"
        android:text="User Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTVBlack"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_subServiceNamePriceTV"
        android:layout_marginLeft="2pt"
        android:layout_toRightOf="@id/item_subServiceNameTV"
        android:text="= Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTVBlack"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_qtyTV"
        android:layout_marginLeft="2pt"
        android:layout_toRightOf="@id/item_subServiceNamePriceTV"
        android:text="x qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTVBlack"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_totalTV"
        android:layout_marginLeft="2pt"
        android:layout_alignParentRight="true"
        android:text="total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTVBlack"/>

    <View
        android:layout_marginTop="5pt"
        android:layout_below="@id/item_totalTV"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"/>
</RelativeLayout>