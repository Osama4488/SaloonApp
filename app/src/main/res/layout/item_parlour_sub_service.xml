<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5pt">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_subServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2pt"
        android:text="Sub Service Name"
        style="@style/LargeTVBlack"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_expertExpertise"
        android:layout_below="@id/item_subServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2pt"
        android:text="Price"
        style="@style/MediumTVBlack"
        android:textAllCaps="true"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_subServiceDescrption"
        android:layout_below="@id/item_expertExpertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2pt"
        android:text="Description"
        style="@style/MediumTVBlack"
        android:textStyle="italic"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/item_bookBN"
        android:layout_below="@id/item_subServiceDescrption"
        android:layout_marginBottom="5pt"
        android:text="Book"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BookButtonStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/item_bookBN"
        android:layout_height="1dp"
        android:background="@color/colorBlack"/>

</RelativeLayout>